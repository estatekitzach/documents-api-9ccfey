ASPNETCORE_ENVIRONMENT=Development

# AWS Configuration - Core
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# AWS S3 Configuration
AWS_S3_BUCKET=estatekit-documents-dev

# AWS Cognito Configuration
AWS_COGNITO_USER_POOL_ID=${AWS_COGNITO_USER_POOL_ID}
AWS_COGNITO_APP_CLIENT_ID=${AWS_COGNITO_APP_CLIENT_ID}

# AWS KMS Configuration
AWS_KMS_KEY_ID=${AWS_KMS_KEY_ID}

# AWS Textract Configuration
AWS_TEXTRACT_QUEUE_URL=${AWS_TEXTRACT_QUEUE_URL}

# Storage Configuration
STORAGE_BASE_PATH=/documents
STORAGE_RETENTION_DAYS=365
STORAGE_ENABLE_ARCHIVING=true
STORAGE_ARCHIVE_AFTER_DAYS=90
STORAGE_MAX_FILE_SIZE=104857600
STORAGE_ENABLE_COMPRESSION=true
STORAGE_TEMP_PATH=/tmp/documents

# Cache Configuration
REDIS_CONNECTION=localhost:6379

# Logging Configuration
LOG_LEVEL=Debug